executable app-bundle
    main-is:          Main.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:    base ^>=4.14.1.0
    hs-source-dirs:   app/move
    default-language: Haskell2010

test-suite app-bundle
    type:                exitcode-stdio-1.0
    main-is:             RadarTest.hs
    hs-source-dirs:      test/move
    other-modules:       spec.model
                       , spec.modelwithclose
                       , spec.trace
                       , spec.tracewithclose
    ghc-options: -wall -werror -wcompat -widentities -wincomplete-uni-patterns -wincomplete-record-updates -wno-unused-top-binds -wno-orphans
    build-depends:
        base ^>=4.14.1.0 
      , radar-lib
      , random >=1.2 
    default-language: Haskell2010

